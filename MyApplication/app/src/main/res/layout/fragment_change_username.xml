<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.waqasur_rehman.myapplication.AccountInfo"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Change UserName"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@+id/textView2" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:id="@+id/current_email"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@android:drawable/editbox_background"
            android:id="@+id/new_username"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/current_email"
            android:layout_alignStart="@+id/current_email" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Email"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Username"
            android:id="@+id/textView8"
            android:textStyle="bold"
            android:layout_below="@+id/current_email"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Change"
            android:id="@+id/user_change_button"
            android:layout_below="@+id/new_username"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_button"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
</FrameLayout>
